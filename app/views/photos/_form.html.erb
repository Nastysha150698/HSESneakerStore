<%= form_for(photo) do |f| %>
  <% if photo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(photo.errors.count, "error") %> prohibited this photo from being saved:</h2>

      <ul>
      <% photo.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if @sneaker %>
    <%= f.hidden_field :sneaker_id, value: @sneaker.id %>
  <% else %>
    <div class="field">
      <%= f.label :sneaker_id %>
      <%#= f.number_field :sneaker_id %>
      <%= select("photo", "sneaker_id", Sneaker.all.collect { |s| [s.brand, s.id] }, { include_blank: true }) %>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>

  <div class="field">
    <%= f.label :title %>
    <%#= f.text_field :title %>
    <%= select("photo", "sneaker_id", Sneaker.all.collect { |s| [s.name, s.id] }, { include_blank: true }) %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
